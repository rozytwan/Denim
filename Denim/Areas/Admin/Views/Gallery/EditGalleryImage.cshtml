@model Denim.Models.Gallery

@{
    ViewBag.Title = "EditGalleryImage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Gallery Image</h2>

@using (Html.BeginForm("Update", "Gallery", new { id = Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
